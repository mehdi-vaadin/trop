{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es2018",
		"outDir": "lib",
		"lib": [
			"es6",
			"es2016.array.include",
			"es2018",
                        "dom"
		],
		"sourceMap": true,
		"rootDir": "src",
                "experimentalDecorators": true,
		"allowJs": true,
		"strict": true,
		"allowSyntheticDefaultImports": true
	},
	"exclude": [
		"node_modules",
		"spec",
		"lib",
		"working",
		"jest.config.js"
	]
}
